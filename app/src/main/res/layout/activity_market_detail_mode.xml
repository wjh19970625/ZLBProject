<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray1">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/picture"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/picture"
                        android:paddingHorizontal="@dimen/layout_margin"
                        android:paddingVertical="@dimen/layout_margin_tiny"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_big"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:text="default"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/author"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:textColor="@color/black"
                                android:text="default"/>
                            <ImageView
                                android:id="@+id/view"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:layout_toRightOf="@+id/author"
                                android:layout_marginLeft="@dimen/layout_margin"
                                android:layout_centerVertical="true"
                                android:src="@drawable/views"/>
                            <TextView
                                android:id="@+id/views"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/view"
                                android:layout_marginLeft="@dimen/layout_margin"
                                android:layout_centerVertical="true"/>

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/layout_margin"
                            android:text="default"/>

                        <TextView
                            android:id="@+id/createTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/layout_margin_mini"
                            android:gravity="right"
                            android:text="default"/>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:id="@+id/finish"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/layout_margin_medium"
            android:layout_marginLeft="@dimen/layout_margin"
            android:gravity="center">

            <com.wjh.utillibrary.view.CircleImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/white_back_gray"/>

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>
