<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/layout_margin_tiny"
        android:paddingVertical="@dimen/layout_margin"
        android:layout_marginTop="@dimen/layout_margin"
        android:background="@color/white">

        <TextView
            android:id="@+id/orderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="default"/>

        <TextView
            android:id="@+id/isPaid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/blue"
            android:text="未支付"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/layout_margin_tiny"
        android:paddingVertical="@dimen/layout_margin"
        android:background="@color/white"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/image"
            android:layout_width="70dp"
            android:layout_height="70dp" />
        <TextView
            android:id="@+id/orderDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_margin"
            android:maxLines="4"
            android:ellipsize="end"
            android:text="default" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray2"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/layout_margin_tiny"
        android:paddingVertical="@dimen/layout_margin"
        android:background="@color/white">

        <TextView
            android:id="@+id/orderCharge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="default"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/orderCharge"
            android:layout_marginRight="@dimen/layout_margin_mini"
            android:gravity="center"
            android:text="合计:¥"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:paddingVertical="@dimen/layout_margin_mini"
        android:paddingHorizontal="@dimen/layout_margin"
        android:visibility="gone"
        android:background="@color/white">

        <TextView
            android:id="@+id/pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_fillet_rectangle_white_5"
            android:textColor="@color/blue"
            android:paddingHorizontal="@dimen/layout_margin"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:text="支 付" />

        <TextView
            android:id="@+id/assess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_fillet_rectangle_white_5"
            android:textColor="@color/blue"
            android:paddingHorizontal="@dimen/layout_margin"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:text="评 价" />

    </RelativeLayout>

</LinearLayout>
