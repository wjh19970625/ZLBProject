<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.wjh.utillibrary.view.NoScrollViewPager
        android:id="@+id/aty_main_vp"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"></com.wjh.utillibrary.view.NoScrollViewPager>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/white">

        <RadioGroup
            android:id="@+id/item_rg"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/index_rb"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/RadioText"
                android:checked="true"
                android:drawableTop="@drawable/index_selector_color"
                android:text="首页"/>

            <RadioButton
                android:id="@+id/education_rb"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/RadioText"
                android:drawableTop="@drawable/education_selector_color"
                android:text="教育"/>

            <RadioButton
                android:id="@+id/market_rb"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/RadioText"
                android:drawableTop="@drawable/market_selector_color"
                android:text="集市"/>

            <RadioButton
                android:id="@+id/me_rb"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/RadioText"
                android:drawableTop="@drawable/me_selector_color"
                android:text="我的"/>

        </RadioGroup>

    </LinearLayout>

</LinearLayout>
